<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="schema" author="Konstantin Smetanin">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="messages"/>
            </not>
        </preConditions>

        <createTable tableName="messages">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="messages_pk"/>
            </column>
            <column name="send_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="message_code" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="processing_code" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="parameters" type="varchar(500)"/>
            <column name="body" type="varchar(4000)"/>
            <column name="answer_date" type="date"/>
            <column name="answer" type="varchar(4000)"/>
            <column name="error" type="varchar(500)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>